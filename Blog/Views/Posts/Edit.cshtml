@using Blog.Models.ViewModels.Posts
@model PostViewModel
@{
    ViewData["Page"] = "post";
    ViewData["Title"] = $"Blog Edit {Model.Title}";
    ViewData["BackgroundImage"] = "'../images/post-bg.jpg'";
    ViewData["Header"] = Model.Title == null ? "Create Post" : $"Edit - {Model.Title}";
    ViewData["PostSubHeader"] = Model.Subtitle;
}

<div class="my-5">
    <form asp-action="Edit" method="post" role="form">
        <input type="hidden" asp-for="PostId" />
        <div class="form-floating">
            <input asp-for="Title" class="form-control" placeholder="Enter blog title..." value ="@Model.Title"/>
            <label asp-for="Title"></label>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Subtitle" class="form-control" placeholder="Enter blog subtitle..." value="@Model.Subtitle"/>
            <label asp-for="Subtitle"></label>
            <span class="text-danger" asp-validation-for="Subtitle"></span>
        </div>
        <div class="form-floating">
            <textarea asp-for="Content" class="form-control" placeholder="Enter your blog content here..." style="height: 12rem" value="@Model.Content"></textarea>
            <label asp-for="Content"></label>
            <span class="text-danger" asp-validation-for="Content"></span>
        </div>
        <br />
        <!-- Submit Button-->
        <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Send</button>
        <a class="btn btn-secondary text-uppercase" asp-action="Index">Cancel</a>
    </form>
</div>