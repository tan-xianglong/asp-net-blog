@using Blog.Models.ViewModels.Contacts
@model ContactViewModel
@{
    ViewData["Page"] = "page";
    ViewData["Title"] = "Contact Me";
    ViewData["BackgroundImage"] = "'images/contact-bg.jpg'";
    ViewData["Header"] = "Contact Me";
    ViewData["SubHeader"] = "Have questions? I have answers.";
}

<p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
<div class="my-5">
    @if(Model.TempMessage != null)
    {
        <div class="alert alert-info">@Model.TempMessage</div>
    }
    <form asp-action="Index" method="post" role="form">
        <div class="form-floating">
            <input asp-for="Name" class="form-control" placeholder="Enter your name..."/>
            <label asp-for="Name"></label>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email..."/>
            <label asp-for="Email">Email address</label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number..."/>
            <label asp-for="PhoneNumber">Phone Number</label>
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-floating">
            <textarea asp-for="Message" class="form-control" placeholder="Enter your message here..." style="height: 12rem"></textarea>
            <label asp-for="Message"></label>
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>
        <br />
        <!-- Submit Button-->
        <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Send</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
